.col-md-9
  = paginate @articles
  - @articles.each do |article|
    .article
      .entry_at
        = fa_icon('calendar-o')
        = l article.entry_at
      .title
        %h2= article.title
      .content
        = simple_format replace_image_tag(article.id, article.content)
        =link_to "詳細表示", article_path(article)
  = paginate @articles

= render 'sidebar'
