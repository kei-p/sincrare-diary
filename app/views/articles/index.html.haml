.col-md-9
  = paginate @articles
  - @articles.each do |article|
    .article
      .entry_at
        = fa_icon('calendar-o')
        = l article.entry_at
      .title
        %h2= article.title
      .content
        = simple_format replace_image_tag(article.id, article.content)
        = link_to "コメント(#{article.comments.count})", article_path(article, anchor: :comment)
        \/
        = link_to "この記事のURL", article_path(article)
  = paginate @articles

= render 'sidebar'
